circuit HA(d,e)
	sum = (d ^ e)'' # unnecessary, but cool for parsing!
	carry = d and e
	out sum, carry
end

# This is a full-adder
circuit main(a,b,c)
	sum1, carry1 = HA(a,b)
	sum2, carry2 = HA(sum1,c)
	out sum2, carry2
end

